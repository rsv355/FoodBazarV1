            android:id="@+id/add"
            android:padding="4dp"
            android:layout_marginLeft="2dp"

            android:background="#E0E0E0"
            android:src="@mipmap/ic_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
