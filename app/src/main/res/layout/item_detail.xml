
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/app_bar"></include>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:background="#D84315"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:scaleType="centerCrop"
        android:layout_width="67dp"
        android:layout_height="67dp"


        android:layout_gravity="center"
        app:border_width="1dp"
        app:border_color="#fff"
        android:src="@mipmap/burgerbacc"/>


    <TextView

        android:layout_gravity="center"



        android:layout_marginLeft="16dp"
        android:textColor="#fff"
        android:textSize="12sp"
        android:text="Total Price : "
        android:gravity="center"



        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView

        android:id="@+id/totalPrice"
        android:layout_gravity="center"
        android:layout_marginRight="16dp"



        android:textColor="#fff"
        android:textSize="16sp"
        android:text="Rs.120  "

        android:gravity="center"



        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:background="#E0E0E0"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:padding="16dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_maps_local_restaurant"/>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Veg. Spicy Burger"
        android:textSize="16dp"

android:textStyle="bold"
        android:textColor="#D84315"


        android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/tagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spicy hot with green vegetables."
                android:textSize="12dp"
                android:textColor="#494949"

                android:layout_marginLeft="8dp"
                android:textStyle="italic"


                android:layout_marginRight="8dp"
             />


        </LinearLayout>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text=" Rs.60"
            android:textSize="16dp"

android:textStyle="bold"
            android:textColor="#D84315"
            android:paddingLeft="16dp"

            android:paddingBottom="4dp"
            android:paddingRight="16dp"/>
        </LinearLayout>

